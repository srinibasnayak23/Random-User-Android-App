<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#a1fcff"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Click the button to fetch a random user"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/ivProfile"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text=""
        android:textSize="18sp" />

    <TextView
        android:id="@+id/gender"
        android:text=""
        android:textSize="16sp"  android:layout_height="20dp" android:layout_width="200dp"/>

    <TextView
        android:id="@+id/tvEmail"
        android:text=""
        android:textSize="16sp"  android:layout_height="20dp" android:layout_width="200dp"/>

    <TextView
        android:id="@+id/phoneNumber"
        android:text=""
        android:textSize="16sp"  android:layout_height="20dp" android:layout_width="200dp"/>




    <Button
        android:id="@+id/btnFetchUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Random User"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="24dp" />

</LinearLayout>
